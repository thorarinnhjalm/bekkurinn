rules_version = '2';

/**
 * TEST MODE Firestore Security Rules for Bekkurinn
 * 
 * ⚠️ WARNING: These rules allow open access for testing
 * ONLY use during local development!
 * Deploy firestore.rules to production
 */

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections during testing
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
